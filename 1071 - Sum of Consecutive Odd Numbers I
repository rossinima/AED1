#include <stdio.h>
 
int main() {
 
    int i, x, y, soma, impar;
    soma = 0;
    scanf("%d %d", &x, &y);
    //printf("%d %d", x, y);
    if(x % 2 == 0){
        impar = x - 1;
    }
    else{
        impar = x - 2;
    }
    //printf("%d\n",impar);
    for(i = impar; i > y; i -= 2){
        //printf("%d\n",i);
        soma += i;
    }
    printf("%d\n", soma);
 
    return 0;
}
